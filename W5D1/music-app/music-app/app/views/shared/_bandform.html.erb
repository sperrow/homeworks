<% title = (band.persisted? ? "Edit" : "Add") %>
<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>
<section class="form">
  <h2><%= title %> Band</h2>
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <form class="" action="<%= action %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="_method" value="<%= method %>">
    <p>
      <label for="bandname">Name: </label>
      <input id="bandname" type="text" name="band[name]" value="<%= band.name %>">
    </p>
    <p>
      <input class="btn btn-submit" type="submit" name="" value="Submit">
    </p>
  </form>
</section>
