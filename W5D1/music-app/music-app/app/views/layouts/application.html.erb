<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="main">
      <header>
        <h1>MusicApp</h1>
        <% if logged_in? %>
          <p><%= "Welcome, #{current_user.email}!" %></p>
          <nav class="topnav">
            <ul>
              <li><%= link_to "Bands", bands_url, class: "nav-link" %></li>
              <li><%= button_to "Logout", session_url, class: "nav-link", method: :delete %></li>
            </ul>
          </nav>
        <% end %>
      </header>
      <%= yield %>
    </div>
  </body>
</html>
